<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="app.coffeeapp.daryna.coffeeguide">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="app.coffeeapp.daryna.coffeeguide.activity.MainActivity"
            android:label="@string/title_main">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="app.coffeeapp.daryna.coffeeguide.activity.RecipesActivity"
            android:label="@string/title_activity_recipes" />
        <activity
            android:name="app.coffeeapp.daryna.coffeeguide.activity.CalculatorActivity"
            android:label="@string/title_activity_cauculator" />
        <activity
            android:name="app.coffeeapp.daryna.coffeeguide.activity.DevicesActivity"
            android:label="@string/title_activity_devices" />
        <activity
            android:name="app.coffeeapp.daryna.coffeeguide.activity.SortsActivity"
            android:label="@string/title_activity_sopts" />
        <activity
            android:name="app.coffeeapp.daryna.coffeeguide.activity.AboutActivity"
            android:label="@string/title_activity_about" />
        <activity
            android:name="app.coffeeapp.daryna.coffeeguide.activity.SupportActivity"
            android:label="@string/title_activity_support" />
    </application>

</manifest>
